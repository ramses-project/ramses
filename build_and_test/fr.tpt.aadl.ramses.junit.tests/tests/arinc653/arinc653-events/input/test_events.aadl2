package test_events
public
  with POK, Data_Model, ARINC653, common_pkg;

  system root
  end root;

  system implementation root.impl
  subcomponents
    the_cpu: processor common_pkg::cpu.single_partition  {	ARINC653::Module_Major_Frame => 1000 ms;
    														ARINC653::Module_Schedule => (
       															[Partition => reference(the_part); Duration => 1000ms; Periodic_Processing_Start => true;]
    														);
                                                         };
    the_proc: process proc.impl;
    the_mem: memory common_pkg::mem.impl;
  properties
    actual_processor_binding => (reference (the_cpu.the_part)) applies to the_proc;
    actual_memory_binding => (reference (the_mem)) applies to the_proc;
  end root.impl;


  process proc
  end proc;

  process implementation proc.impl
  subcomponents
    the_sender: thread common_pkg::event_sender.impl;
    the_receiver: thread common_pkg::event_receiver.impl;
  connections
    cnx: port the_sender.p_out -> the_receiver.p_in;
  end proc.impl;

end test_events;