 		name 							<- impl.name,
		ownedRealization 				<- thisModule.Realization(typeImg, implImg),
		ownedThreadGroupSubcomponent 	<- impl.getSubcomponentsInstances('thread group'),
		ownedThreadSubcomponent 		<- impl.getSubcomponentsInstances('thread'),
