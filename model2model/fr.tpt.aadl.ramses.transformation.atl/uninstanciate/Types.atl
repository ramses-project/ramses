	 ownedDataPort <- type.ownedDataPort->collect(e|e.getFeaturesInstances('dataPort'))->excluding(OclUndefined),
	 ownedEventPort <- type.ownedEventPort->collect(e|e.getFeaturesInstances('eventPort'))->excluding(OclUndefined)
	)
}

